.col-xs-4
  .panel.panel-default
    .panel-heading
      .panel-title
        Post new tweet
    .panel-body
      = form_for @tweet do |f|
        .form-group
          = f.label :content
          = f.text_area :content, class: "form-control"

        = f.submit class: "btn btn-default"

.col-xs-8
  .list-group
    - @tweets.each do |tweet|
      .list-group-item
        %h4.list-grou-item-heading
          = link_to tweet.user.email, tweet.user
        = tweet.content
